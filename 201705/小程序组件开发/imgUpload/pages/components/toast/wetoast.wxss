/**toast.wxss**/
.wetoast {
	display: none;
}
.wetoast_show {
	display: block;
}
.wetoast__mask {
    position: fixed;
    z-index: 1000;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
}
.wetoast__bd {
	opacity: 0;
	display: flex;
	flex-direction: column;
	position: fixed;
    z-index: 5000;
    width: 120px;
    height: 120px;
    top: 140px;
    left: 50%;
    box-sizing: border-box;
    transform: translateX(-50%);
    background: rgba(40, 40, 40, 0.75);
    border-radius: 5px;
    color: #FFFFFF;
    word-wrap: break-word;
    word-break: break-all;
    align-items: center;
	justify-content: center;
}
.wetoast__bd__img {
	margin-top: 3px;
    margin-bottom: 14px;
}
.wetoast__bd__img_desc {
    width: 20px;
    height: 20px;
    vertical-align: middle;
}
.wetoast__bd__icon {
    margin-top: 3px;
    margin-bottom: 10px; 
}
.wetoast__bd__title {
    margin-top: 6px;
    line-height: 1;
	font-size: 12px;
    color: #fff;
}